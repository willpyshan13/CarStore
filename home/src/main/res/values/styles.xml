<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--设置Tablayout字体大小-->
    <style name="TabLayoutTextSize">
        <item name="android:textSize">16sp</item>
    </style>
    <!--设置Tablayout字体加粗-->
    <style name="TabLayoutTextStyleBold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TabLayoutTextStyleNormal">
        <item name="android:textStyle">normal</item>
    </style>
    <!-- popup window 显示消失动画-->
    <style name="PopWindowAnimStyle">
        <item name="android:windowEnterAnimation">@anim/popup_below_in</item>
        <!-- 指定显示的动画xml  -->
        <item name="android:windowExitAnimation">@anim/popup_below_out</item>
        <!-- 指定消失的动画xml  -->
    </style>
</resources>