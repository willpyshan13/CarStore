<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/home_car_case_img"
        android:layout_width="68dp"
        android:layout_height="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_car_case_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#FF090909"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/home_car_case_img"
        app:layout_constraintTop_toTopOf="@+id/home_car_case_img" />

    <TextView
        android:id="@+id/home_car_case_technician_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:textColor="#FF666666"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/home_car_case_name"
        app:layout_constraintTop_toBottomOf="@+id/home_car_case_name" />


    <TextView
        android:id="@+id/home_car_technician_seniority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="#FF666666"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/home_car_case_technician_name"
        app:layout_constraintTop_toBottomOf="@+id/home_car_case_technician_name" />


    <TextView
        android:id="@+id/home_car_case_purchase"
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:background="#FF1691E3"
        android:gravity="center"
        android:text="立即购买"
        android:textColor="#FFFFFFFF"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/home_car_technician_seniority"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/home_car_case_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFF3838"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/home_car_case_purchase"
        app:layout_constraintTop_toBottomOf="@+id/home_car_case_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF1F1F1"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>