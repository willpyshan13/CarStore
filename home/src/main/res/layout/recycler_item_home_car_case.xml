<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/recycler_item_home_car_shape"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:textColor="#FF090909"
        android:textStyle="bold"
        android:textSize="16dp"
        android:id="@+id/home_car_case_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF1F1F1"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/home_car_case_name"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/home_car_case_earnings"
        android:text="@string/home_car_case_earnings"
        android:textSize="14dp"
        android:textColor="#FF666666"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/home_car_case_sales_volume"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/home_car_case_sales_volume"
        android:text="@string/home_car_case_sales_volume"
        android:textSize="14dp"
        android:textColor="#FF666666"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/home_car_case_earnings"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/home_car_case_earnings_num"
        android:textSize="28dp"
        android:textColor="#FFF76565"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        app:layout_constraintRight_toLeftOf="@+id/home_car_case_sales_volume_num"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/home_car_case_earnings"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/home_car_case_sales_volume_num"
        android:textSize="28dp"
        android:textColor="#FF090909"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/home_car_case_earnings_num"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="@+id/home_car_case_earnings_num"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>