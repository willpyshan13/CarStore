<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/home_car_technician_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_car_issue_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:textColor="#FF090909"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/home_car_technician_img"
        app:layout_constraintTop_toTopOf="@+id/home_car_technician_img" />

    <TextView
        android:id="@+id/home_car_issue_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="#FF666666"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/home_car_issue_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_car_issue_name" />

    <TextView
        android:id="@+id/home_car_issue_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#FF666666"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/home_car_technician_img"
        app:layout_constraintStart_toStartOf="@+id/home_car_issue_name" />

    <TextView
        android:id="@+id/home_car_answer_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="#FF090909"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/home_car_technician_img"
        app:layout_constraintTop_toBottomOf="@+id/home_car_technician_img" />

    <TextView
        android:id="@+id/home_car_click_audit"
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:layout_marginBottom="16dp"
        android:background="#FF1691E3"
        android:gravity="center"
        android:text="立即旁听"
        android:textColor="#FFFFFFFF"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/home_car_audit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:textColor="#FFFF3838"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/home_car_click_audit"
        app:layout_constraintRight_toLeftOf="@+id/home_car_click_audit"
        app:layout_constraintTop_toTopOf="@+id/home_car_click_audit" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF1F1F1"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>